---
import { getCollection } from "astro:content";
import FormattedDate from "./FormattedDate.astro";
type Props = {
  className?: string;
};

const { className } = Astro.props;

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<section class={className}>
  <ul class="flex flex-col gap-4">
    {
      posts.map((post) => (
        <li class="w-full">
          <a
            class="flex flex-row gap-4 p-4 border"
            href={`/blog/${post.slug}/`}
          >
            <div class="flex flex-col max-w-96">
              <h2 class="text-xl font-bold">{post.data.title}</h2>
              <p class="hidden md:line-clamp-2">{post.data.description}</p>
              <p class="mt-auto">
                <FormattedDate date={post.data.pubDate} />
              </p>
            </div>
            <img
              class="ml-auto h-32 object-contain"
              src={post.data.heroImage}
              alt=""
            />
          </a>
        </li>
      ))
    }
  </ul>
</section>
